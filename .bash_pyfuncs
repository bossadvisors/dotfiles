export OLD_PATH=$PATH


update_python_switchers()
{
    python $HOME/bin/update_python_switchers.py --use_generic_prompt=False
}


if [ -f $HOME/.python_switchers.sh ] ; then
    . $HOME/.python_switchers.sh
else
    update_python_switchers
fi

